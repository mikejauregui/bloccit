<% comments.each do |comment| %>
<div class="media">
  <div class="media-body">
    <%= comment.body %> </br>
    <small>
      submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %>
    </small>
  </div>
</div>
<% if current_user == comment.user || current_user.admin?%>
<%= link_to "Delete Comment", @comment, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this comment?' } %>
 <% end %>
 <% end %>
